{
  "name": "step-app-expt",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node src/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ci": "echo 'E2E tests skipped in CI - require manual authentication'",
    "test:all": "npm run test && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=html",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:local": "NODE_ENV=test npm run test:all",
    "test:prod": "NODE_ENV=production npm run test:smoke",
    "test:smoke": "jest tests/environments/production/smoke-tests.test.js",
    "test:security": "node tests/integration/security/security-regression.test.js",
    "test:security:prod": "NODE_ENV=production node tests/integration/security/security-regression.test.js",
    "test:critical": "jest tests/unit/server/startup-smoke-test.test.js tests/unit/imports/critical-dependencies.test.js tests/unit/api/csrf-token-generation.test.js tests/unit/contracts/route-contracts.test.js tests/unit/middleware/middleware-integrity.test.js",
    "test:regression:quick": "jest tests/integration/api/steps-api-regression.test.js --testNamePattern='(should accept valid step count|should require authentication|should validate CSRF token)'",
    "test:regression:api": "jest tests/integration/api/steps-api-regression.test.js tests/integration/api/leaderboard-regression.test.js",
    "test:regression:security": "npm run test:security",
    "test:regression:full": "npm run test:regression:api && npm run test:regression:security",
    "test:contracts": "jest tests/unit/contracts/route-contracts.test.js",
    "test:middleware": "jest tests/unit/middleware/middleware-integrity.test.js",
    "test:regression:production": "NODE_ENV=production npm run test:smoke && npm run test:security:prod",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:tablet": "playwright test --project=tablet-chrome",
    "test:e2e:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:e2e:responsive": "playwright test tests/e2e/cross-browser/mobile-responsive.test.js",
    "test:e2e:auth": "playwright test tests/e2e/user-journeys/authentication-flow.test.js",
    "test:e2e:steps": "playwright test tests/e2e/user-journeys/step-recording-workflow.test.js",
    "test:e2e:leaderboard": "playwright test tests/e2e/user-journeys/leaderboard-viewing.test.js",
    "test:e2e:session": "playwright test tests/e2e/user-journeys/session-management.test.js",
    "test:e2e:production": "PRODUCTION_URL=https://step-app-4x-yhw.fly.dev playwright test --project=production",
    "test:e2e:production:local": "playwright test tests/e2e/production/production-auth-flow.test.js",
    "test:e2e:quick": "playwright test tests/e2e/user-journeys/authentication-flow.test.js --grep='Complete Authentication Workflow'",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:install-deps": "playwright install-deps",
    "test:e2e:admin": "playwright test tests/e2e/admin/admin-panel-functionality.test.js",
    "test:e2e:admin:mcp": "playwright test tests/e2e/admin/mcp-token-management.test.js",
    "test:e2e:admin:challenges": "playwright test tests/e2e/admin/challenge-management.test.js",
    "test:e2e:admin:security": "playwright test tests/e2e/admin/admin-security-boundaries.test.js",
    "test:e2e:admin:all": "playwright test tests/e2e/admin/",
    "test:all": "npm run test:regression:full && npm run test:e2e:cross-browser && npm run test:e2e:admin:all",
    "test:ci": "npm run test:regression:full && npm run test:e2e --project=chromium",
    "backup": "node src/scripts/backup.js",
    "backup:volume": "node src/scripts/backup.js --volume-snapshot",
    "backup:cleanup": "node src/scripts/backup.js --cleanup",
    "pre-deploy": "node src/scripts/pre-deploy.js",
    "deploy": "npm run pre-deploy && fly deploy",
    "deploy:skip-backup": "fly deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.10.0",
    "connect-sqlite3": "^0.9.16",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@playwright/test": "^1.54.1",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "playwright": "^1.54.1",
    "supertest": "^7.1.4"
  }
}
